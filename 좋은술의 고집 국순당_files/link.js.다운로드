    ///// family site
$(".f_contact select").change(function(){
    var val = $(this).val();
    if(val === "") return false;
    else {window.open().location.href=val;}
});/////click//////      
    
    ////// sns site
$(".f_sns li a").click(function(e){
    e.preventDefault();
    
    var idx = $(this).parent().index();
//       alert(idx);
    switch(idx){
        case 0:window.open().location.href="https://ko-kr.facebook.com/kooksoondang/"; break;
        case 1:window.open().location.href="https://twitter.com/hashtag/%EA%B5%AD%EC%88%9C%EB%8B%B9%EB%A7%89%EA%B1%B8%EB%A6%AC"; break;
        case 2:window.open().location.href="https://www.instagram.com/explore/tags/%EA%B5%AD%EC%88%9C%EB%8B%B9/"; break;
